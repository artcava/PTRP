<UserControl x:Class="PTRP.App.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:PTRP.ViewModels;assembly=PTRP.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Dashboard Coordinatore"
                     Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                     Margin="0,0,0,8"/>
            <TextBlock Text="{Binding CurrentMonthDisplay}"
                     Style="{StaticResource MaterialDesignBody2TextBlock}"
                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- KPI Cards -->
        <UniformGrid Grid.Row="1" 
                     Rows="1" 
                     Columns="4"
                     Margin="0,0,0,24">
            
            <!-- Card 1: Total Patients -->
            <materialDesign:Card Margin="0,0,12,0"
                                 UniformCornerRadius="8">
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <materialDesign:PackIcon Grid.Row="0"
                                           Kind="AccountMultiple"
                                           Width="48"
                                           Height="48"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1"
                             Text="{Binding TotalPatientsCount}"
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                             Margin="0,12,0,4"/>

                    <TextBlock Grid.Row="2"
                             Text="Pazienti Attivi"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </Grid>
            </materialDesign:Card>

            <!-- Card 2: Active Projects -->
            <materialDesign:Card Margin="0,0,12,0"
                                 UniformCornerRadius="8">
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <materialDesign:PackIcon Grid.Row="0"
                                           Kind="FolderOpen"
                                           Width="48"
                                           Height="48"
                                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                                           HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1"
                             Text="{Binding ActiveProjectsCount}"
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                             Margin="0,12,0,4"/>

                    <TextBlock Grid.Row="2"
                             Text="Progetti Attivi"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </Grid>
            </materialDesign:Card>

            <!-- Card 3: Operational Educators -->
            <materialDesign:Card Margin="0,0,12,0"
                                 UniformCornerRadius="8">
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <materialDesign:PackIcon Grid.Row="0"
                                           Kind="AccountTie"
                                           Width="48"
                                           Height="48"
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1"
                             Text="{Binding OperationalEducatorsCount}"
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                             Margin="0,12,0,4"/>

                    <TextBlock Grid.Row="2"
                             Text="Educatori Operativi"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </Grid>
            </materialDesign:Card>

            <!-- Card 4: Visits Completion -->
            <materialDesign:Card UniformCornerRadius="8">
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <materialDesign:PackIcon Grid.Row="0"
                                           Kind="CalendarCheck"
                                           Width="48"
                                           Height="48"
                                           Foreground="#FF9800"
                                           HorizontalAlignment="Left"/>

                    <StackPanel Grid.Row="1"
                              Orientation="Horizontal"
                              Margin="0,12,0,4">
                        <TextBlock Text="{Binding CompletedVisitsCount}"
                                 Style="{StaticResource MaterialDesignHeadline3TextBlock}"/>
                        <TextBlock Text="/"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 Margin="4,0"
                                 VerticalAlignment="Bottom"/>
                        <TextBlock Text="{Binding TotalScheduledVisitsCount}"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                 VerticalAlignment="Bottom"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2"
                             Text="Visite Completate"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             Margin="0,0,0,8"/>

                    <ProgressBar Grid.Row="3"
                               Value="{Binding VisitsCompletionPercentage}"
                               Minimum="0"
                               Maximum="100"
                               Height="8"
                               Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                </Grid>
            </materialDesign:Card>
        </UniformGrid>

        <!-- Content Area: Charts + Top Educators -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Chart Area (Placeholder) -->
            <materialDesign:Card Grid.Column="0"
                                 UniformCornerRadius="8">
                <Grid>
                    <Border Background="{DynamicResource MaterialDesignDivider}"
                            CornerRadius="8"
                            Padding="32">
                        <StackPanel HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ChartLine"
                                                   Width="64"
                                                   Height="64"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                            <TextBlock Text="Grafico Visite Mensili"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="(Implementazione in issue futura con LiveCharts)"
                                     Style="{StaticResource MaterialDesignBody2TextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- Top Educators List -->
            <materialDesign:Card Grid.Column="2"
                                 UniformCornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Padding="20,16">
                        <StackPanel>
                            <TextBlock Text="Top 5 Educatori"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Foreground="White"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Visite nel mese corrente"
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="White"
                                     Opacity="0.8"/>
                        </StackPanel>
                    </Border>

                    <!-- Educators List -->
                    <ItemsControl Grid.Row="1"
                                ItemsSource="{Binding TopEducators}"
                                Margin="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,0,1"
                                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                                      Padding="20,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Rank Badge -->
                                        <Border Grid.Column="0"
                                              Background="{DynamicResource PrimaryHueMidBrush}"
                                              Width="32"
                                              Height="32"
                                              CornerRadius="16"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Rank}"
                                                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                     Foreground="White"
                                                     FontWeight="SemiBold"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding Name}"
                                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                 VerticalAlignment="Center"/>

                                        <!-- Visits Count -->
                                        <TextBlock Grid.Column="2"
                                                 Text="{Binding VisitsCount}"
                                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
