<UserControl x:Class="PTRP.App.Views.Patients.PatientListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:PTRP.ViewModels;assembly=PTRP.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:PatientListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- LEFT: Patient List (Master) -->
        <materialDesign:Card Grid.Column="0"
                           UniformCornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Padding="16">
                    <TextBlock Text="Lista Pazienti"
                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                             Foreground="White"/>
                </Border>
                
                <!-- Search and Filters -->
                <StackPanel Grid.Row="1"
                          Margin="16">
                    <!-- Search Box -->
                    <TextBox materialDesign:HintAssist.Hint="Cerca per nome o cognome"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                           Margin="0,0,0,12">
                        <materialDesign:TextFieldAssist.LeadingIcon>
                            <materialDesign:PackIcon Kind="Magnify"/>
                        </materialDesign:TextFieldAssist.LeadingIcon>
                    </TextBox>
                    
                    <!-- State Filter -->
                    <ComboBox materialDesign:HintAssist.Hint="Filtra per stato"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            ItemsSource="{Binding ProjectStateFilters}"
                            SelectedItem="{Binding SelectedStateFilter}"/>
                </StackPanel>
                
                <!-- DataGrid (READ-ONLY) -->
                <DataGrid Grid.Row="2"
                        ItemsSource="{Binding Patients}"
                        SelectedItem="{Binding SelectedPatient}"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        HeadersVisibility="Column"
                        GridLinesVisibility="Horizontal"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="12"
                        Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cognome"
                                          Binding="{Binding LastName}"
                                          Width="*"/>
                        <DataGridTextColumn Header="Nome"
                                          Binding="{Binding FirstName}"
                                          Width="*"/>
                        <DataGridTemplateColumn Header="Stato"
                                              Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding ProjectState, Converter={StaticResource ProjectStateToColorConverter}}"
                                          CornerRadius="12"
                                          Padding="8,4"
                                          HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding ProjectStateDisplay}"
                                                 Foreground="White"
                                                 FontSize="11"
                                                 FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Educatori"
                                          Binding="{Binding AssignedEducatorsDisplay}"
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
        
        <!-- RIGHT: Detail Panel -->
        <materialDesign:Card Grid.Column="2"
                           UniformCornerRadius="8"
                           Visibility="{Binding SelectedPatient, Converter={StaticResource NullToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">
                    
                    <!-- Header with Patient Name and Actions -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="{Binding SelectedPatient.FullName}"
                                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                        
                        <StackPanel Grid.Column="1"
                                  Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="Modifica">
                                <materialDesign:PackIcon Kind="Pencil"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="Elimina"
                                  Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                                <materialDesign:PackIcon Kind="Delete"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Anagrafica Section -->
                    <TextBlock Text="Anagrafica"
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             Margin="0,0,0,8"/>
                    
                    <Border Background="{DynamicResource MaterialDesignDivider}"
                          CornerRadius="4"
                          Padding="12"
                          Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock>
                                <Run Text="Nome: " FontWeight="SemiBold"/>
                                <Run Text="{Binding SelectedPatient.FirstName}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Cognome: " FontWeight="SemiBold"/>
                                <Run Text="{Binding SelectedPatient.LastName}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Data creazione: " FontWeight="SemiBold"/>
                                <Run Text="{Binding SelectedPatient.CreatedAt, StringFormat=dd/MM/yyyy}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Active Project Section -->
                    <StackPanel Visibility="{Binding SelectedPatient.ActiveProject, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="Progetto Attivo"
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Margin="0,0,0,8"/>
                        
                        <Border Background="{DynamicResource MaterialDesignDivider}"
                              CornerRadius="4"
                              Padding="12"
                              Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedPatient.ActiveProject.Title}"
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding SelectedPatient.ActiveProject.Period}"
                                         FontSize="12"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Educatori Assegnati:"
                                         FontWeight="SemiBold"
                                         FontSize="12"
                                         Margin="0,0,0,4"/>
                                <ItemsControl ItemsSource="{Binding SelectedPatient.ActiveProject.Educators}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                      Margin="0,2">
                                                <materialDesign:PackIcon Kind="AccountCircle"
                                                                       Width="16"
                                                                       Height="16"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Name}"
                                                         FontSize="12"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text=" - "
                                                         FontSize="12"
                                                         VerticalAlignment="Center"
                                                         Margin="4,0"/>
                                                <TextBlock Text="{Binding Role}"
                                                         FontSize="12"
                                                         FontStyle="Italic"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Content="Visualizza Dettagli Progetto"
                                      Margin="0,12,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Next Appointment Section -->
                    <StackPanel Visibility="{Binding SelectedPatient.NextAppointment, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="Prossimo Appuntamento"
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Margin="0,0,0,8"/>
                        
                        <Border Background="{DynamicResource MaterialDesignDivider}"
                              CornerRadius="4"
                              Padding="12"
                              Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedPatient.NextAppointment.TypeDisplay}"
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,4"/>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CalendarClock"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SelectedPatient.NextAppointment.FormattedDate}"
                                             FontSize="12"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                          Visibility="{Binding SelectedPatient.NextAppointment.Location, Converter={StaticResource NullToVisibilityConverter}}">
                                    <materialDesign:PackIcon Kind="MapMarker"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SelectedPatient.NextAppointment.Location}"
                                             FontSize="12"
                                             VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                              Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilePlus"
                                                       Width="20"
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Nuovo Progetto"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="History"
                                                       Width="20"
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Storico Visite"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
