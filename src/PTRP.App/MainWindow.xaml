<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PTRP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PTRP - Gestione Progetti Terapeutici"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="1000"
        Icon="favicon.ico">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Style per menu item attivo -->
        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="8,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#34D058"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style per menu item selezionato -->
        <Style x:Key="MenuItemSelectedStyle" TargetType="Button" BasedOn="{StaticResource MenuItemStyle}">
            <Setter Property="Background" Value="#34D058"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <!-- Style per separatore menu -->
        <Style x:Key="MenuSeparatorStyle" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Opacity" Value="0.2"/>
            <Setter Property="Margin" Value="16,8"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition Width="240"/>
            <!-- Content Area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- SIDEBAR -->
        <Border Grid.Column="0" 
                Background="#28A745">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Logo + App Name -->
                    <RowDefinition Height="*"/>     <!-- Navigation Menu -->
                    <RowDefinition Height="Auto"/>  <!-- User Info -->
                </Grid.RowDefinitions>
                
                <!-- LOGO + APP NAME -->
                <StackPanel Grid.Row="0" 
                           Margin="16,20,16,32">
                    <materialDesign:PackIcon Kind="Hospital" 
                                           Width="48" 
                                           Height="48" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="PTRP" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Margin="0,12,0,0"/>
                    <TextBlock Text="Progetti Terapeutici" 
                              FontSize="11" 
                              Foreground="White" 
                              Opacity="0.9"
                              HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- NAVIGATION MENU -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,0,0,16">
                        
                        <!-- Dashboard -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToDashboardCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Pazienti -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToPatientsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Pazienti" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Progetti -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToProjectsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderMultiple" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Progetti" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Educatori -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToEducatorsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountTie" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Educatori" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Calendario -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToCalendarCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Calendar" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Calendario" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Separatore -->
                        <Border Style="{StaticResource MenuSeparatorStyle}"/>
                        
                        <!-- Sincronizzazione -->
                        <TextBlock Text="SINCRONIZZAZIONE" 
                                  FontSize="11" 
                                  Foreground="White" 
                                  Opacity="0.6"
                                  FontWeight="SemiBold"
                                  Margin="24,8,0,8"/>
                        
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToSyncCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Sync" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Sync" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Separatore -->
                        <Border Style="{StaticResource MenuSeparatorStyle}"/>
                        
                        <!-- Informazioni -->
                        <TextBlock Text="INFORMAZIONI" 
                                  FontSize="11" 
                                  Foreground="White" 
                                  Opacity="0.6"
                                  FontWeight="SemiBold"
                                  Margin="24,8,0,8"/>
                        
                        <!-- Report -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToReportsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Report" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Impostazioni -->
                        <Button Style="{StaticResource MenuItemStyle}"
                                Command="{Binding NavigateToSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" 
                                                       Width="24" 
                                                       Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Impostazioni" 
                                          FontSize="14"
                                          Margin="12,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- USER INFO -->
                <Border Grid.Row="2" 
                       Background="#1E7E34"
                       Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="White"
                               Width="32"
                               Height="32"
                               CornerRadius="16"
                               Margin="0,0,12,0">
                            <TextBlock Text="{Binding UserInitials}" 
                                      FontSize="14" 
                                      FontWeight="Bold"
                                      Foreground="#28A745"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding UserFullName}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                            <TextBlock Text="{Binding UserRole}" 
                                      FontSize="11" 
                                      Foreground="White"
                                      Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- CONTENT AREA -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Top Bar -->
                <RowDefinition Height="*"/>     <!-- Dynamic Content -->
            </Grid.RowDefinitions>
            
            <!-- TOP BAR -->
            <Border Grid.Row="0" 
                   Background="White" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="0,0,0,1"
                   Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Page Title -->
                    <TextBlock Grid.Column="0"
                              Text="{Binding CurrentPageTitle}" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="#333333"
                              VerticalAlignment="Center"/>
                    
                    <!-- Actions -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal">
                        <!-- Notification Button -->
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Width="40" 
                               Height="40"
                               Margin="0,0,8,0"
                               ToolTip="Notifiche">
                            <materialDesign:PackIcon Kind="Bell" 
                                                   Width="24" 
                                                   Height="24"/>
                        </Button>
                        
                        <!-- Settings Button -->
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Command="{Binding NavigateToSettingsCommand}"
                               Width="40" 
                               Height="40"
                               ToolTip="Impostazioni">
                            <materialDesign:PackIcon Kind="Cog" 
                                                   Width="24" 
                                                   Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- DYNAMIC CONTENT AREA -->
            <ContentControl Grid.Row="1" 
                          Content="{Binding CurrentViewModel}"
                          Margin="0"/>
            
            <!-- SNACKBAR for notifications -->
            <materialDesign:Snackbar Grid.Row="1"
                                   x:Name="MainSnackbar"
                                   MessageQueue="{Binding MessageQueue}"
                                   VerticalAlignment="Bottom"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
        </Grid>
    </Grid>
</Window>