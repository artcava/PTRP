<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PTRP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PTRP - Gestione Pazienti"
        Height="600"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- Converter Bool to Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Style per bottoni icona -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style per bottone circolare verde -->
        <Style x:Key="CircularGreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Titolo, Ricerca e Comando Aggiungi -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Titolo Sezione -->
                <TextBlock Grid.Row="0" 
                           Text="Gestione Pazienti" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           Margin="0,0,0,15"/>
                
                <!-- Ricerca e Aggiungi -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Label Ricerca -->
                    <TextBlock Grid.Column="0" 
                               Text="Ricerca:" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="0,0,10,0"/>
                    
                    <!-- Campo Ricerca con X interno e placeholder -->
                    <Grid Grid.Column="1" MaxWidth="500" HorizontalAlignment="Left">
                        <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40"
                                 MinWidth="350"
                                 Padding="12,8,40,8"
                                 VerticalContentAlignment="Center"
                                 Background="White"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 FontSize="14">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Cerca per nome o cognome..." 
                                                                       Foreground="#999999" 
                                                                       FontSize="14"
                                                                       Margin="12,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- Bottone X per cancellare (appare solo con testo) -->
                        <Button Style="{StaticResource IconButtonStyle}"
                                Command="{Binding ClearSearchCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"
                                Width="24"
                                Height="24"
                                Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisibility}}">
                            <materialDesign:PackIcon Kind="Close" 
                                                     Width="18" 
                                                     Height="18"
                                                     Foreground="#666666"/>
                        </Button>
                    </Grid>
                    
                    <!-- Bottone Aggiungi con icona + verde circolare -->
                    <Button Grid.Column="2"
                            Command="{Binding AddNewPatientCommand}"
                            Style="{StaticResource CircularGreenButtonStyle}"
                            Width="40"
                            Height="40"
                            Margin="15,0,0,0"
                            ToolTip="Aggiungi Paziente">
                        <materialDesign:PackIcon Kind="Plus" 
                                                 Width="24" 
                                                 Height="24"
                                                 Foreground="White"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Lista Pazienti con azioni inline -->
        <DataGrid Grid.Row="1"
                  x:Name="PatientsDataGrid"
                  ItemsSource="{Binding Patients}"
                  SelectedItem="{Binding SelectedPatient}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Background="White"
                  AlternatingRowBackground="#FAFAFA"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalScrollBarVisibility="Auto"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="20">
            
            <!-- CellStyle per rimuovere completamente il background della cella selezionata -->
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            
            <DataGrid.Columns>
                <!-- Indicatore Selezione: Freccia verso destra -->
                <DataGridTemplateColumn Header="" Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- MVVM-friendly: Visibilità basata su binding IsSelected della riga -->
                            <TextBlock Text="›" 
                                       FontSize="20" 
                                       Foreground="#007ACC"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsSelected, 
                                           RelativeSource={RelativeSource AncestorType=DataGridRow},
                                           Converter={StaticResource BoolToVisibility}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Nome (editabile) -->
                <DataGridTextColumn Header="Nome" 
                                    Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"
                                    MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Cognome (editabile) -->
                <DataGridTextColumn Header="Cognome" 
                                    Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"
                                    MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Data Creazione (READ-ONLY) -->
                <DataGridTextColumn Header="Data Creazione" 
                                    Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm', Mode=OneWay}" 
                                    Width="140"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Foreground" Value="#666666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Azioni -->
                <DataGridTemplateColumn Header="Azioni" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                
                                <!-- Bottoni Modifica/Elimina (visibili quando NON in editing) -->
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding IsNotEditing, Converter={StaticResource BoolToVisibility}}">
                                    <!-- Modifica (matita) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.EditPatientCommand, ElementName=PatientsDataGrid}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Modifica">
                                        <materialDesign:PackIcon Kind="Pencil" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#007ACC"/>
                                    </Button>
                                    
                                    <!-- Elimina (X rossa) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.DeletePatientCommand, ElementName=PatientsDataGrid}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Elimina">
                                        <materialDesign:PackIcon Kind="Delete" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#DC3545"/>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Bottoni Salva/Annulla (visibili quando in editing) -->
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                                    <!-- Salva (check verde) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.SavePatientCommand, ElementName=PatientsDataGrid}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Salva">
                                        <materialDesign:PackIcon Kind="Check" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#28A745"/>
                                    </Button>
                                    
                                    <!-- Annulla (X grigia) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.CancelEditCommand, ElementName=PatientsDataGrid}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Annulla">
                                        <materialDesign:PackIcon Kind="Close" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#6C757D"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar: Messaggi e Loading -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           FontSize="12"/>

                <ProgressBar IsIndeterminate="{Binding IsLoading}"
                             Width="100"
                             Height="3"
                             Background="Transparent"
                             Foreground="#007ACC"
                             Margin="10,0,0,0"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
