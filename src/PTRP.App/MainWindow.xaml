<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="PTRP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PTRP - Gestione Pazienti"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <!-- Converter Bool to Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Style per bottoni icona -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style per bottone circolare verde -->
        <Style x:Key="CircularGreenButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Ricerca e Comando Aggiungi -->
        <Border Grid.Row="0" Background="White" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Ricerca con X interno -->
                <Grid Grid.Column="0" MaxWidth="400" HorizontalAlignment="Left">
                    <TextBox x:Name="SearchBox"
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Height="40"
                             Padding="12,8,40,8"
                             VerticalContentAlignment="Center"
                             Background="White"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             FontSize="14"
                             materialDesign:HintAssist.Hint="Cerca per nome o cognome..."/>
                    
                    <!-- Bottone X per cancellare (appare solo con testo) -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ClearSearchCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Width="24"
                            Height="24"
                            Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisibility}}">
                        <materialDesign:PackIcon Kind="Close" 
                                                 Width="18" 
                                                 Height="18"
                                                 Foreground="#666666"/>
                    </Button>
                </Grid>
                
                <!-- Bottone Aggiungi con icona + verde circolare -->
                <Button Grid.Column="1"
                        Command="{Binding AddNewPatientCommand}"
                        Style="{StaticResource CircularGreenButtonStyle}"
                        Width="40"
                        Height="40"
                        ToolTip="Aggiungi Paziente">
                    <materialDesign:PackIcon Kind="Plus" 
                                             Width="24" 
                                             Height="24"
                                             Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <!-- Lista Pazienti con azioni inline -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Patients}"
                  SelectedItem="{Binding SelectedPatient}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Background="White"
                  RowBackground="White"
                  AlternatingRowBackground="#F9F9F9"
                  BorderBrush="#E0E0E0"
                  BorderThickness="1"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalScrollBarVisibility="Auto"
                  Margin="20">
            
            <DataGrid.Columns>
                <!-- Nome (editabile) -->
                <DataGridTextColumn Header="Nome" 
                                    Binding="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"
                                    MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Cognome (editabile) -->
                <DataGridTextColumn Header="Cognome" 
                                    Binding="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"
                                    MinWidth="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Data Creazione (READ-ONLY) -->
                <DataGridTextColumn Header="Data Creazione" 
                                    Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm', Mode=OneWay}" 
                                    Width="140"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Foreground" Value="#666666"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- Azioni -->
                <DataGridTemplateColumn Header="Azioni" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                
                                <!-- Bottoni Modifica/Elimina (visibili quando NON in editing) -->
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding IsNotEditing, Converter={StaticResource BoolToVisibility}}">
                                    <!-- Modifica (matita) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.EditPatientCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Modifica">
                                        <materialDesign:PackIcon Kind="Pencil" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#007ACC"/>
                                    </Button>
                                    
                                    <!-- Elimina (X rossa) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.DeletePatientCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Elimina">
                                        <materialDesign:PackIcon Kind="Delete" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#DC3545"/>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Bottoni Salva/Annulla (visibili quando in editing) -->
                                <StackPanel Orientation="Horizontal" 
                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibility}}">
                                    <!-- Salva (check verde) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.SavePatientCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Salva">
                                        <materialDesign:PackIcon Kind="Check" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#28A745"/>
                                    </Button>
                                    
                                    <!-- Annulla (X grigia) -->
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.CancelEditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Annulla">
                                        <materialDesign:PackIcon Kind="Close" 
                                                                 Width="20" 
                                                                 Height="20"
                                                                 Foreground="#6C757D"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar: Messaggi e Loading -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#333333"
                           VerticalAlignment="Center"
                           FontSize="12"/>

                <ProgressBar IsIndeterminate="{Binding IsLoading}"
                             Width="100"
                             Height="3"
                             Background="Transparent"
                             Foreground="#007ACC"
                             Margin="10,0,0,0"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
